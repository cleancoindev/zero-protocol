{
	"compilerOptions": {
		"target": "ES2017",
		"module": "commonjs",
		"baseUrl": "src",
		"lib": ["dom.iterable", "esnext", "es6", "dom"],
		"esModuleInterop": true,
		"declaration": true,
		"strictNullChecks": false,
		"outDir": "dist",
		"sourceMap": true,
		"resolveJsonModule": true,
		"strict": false,
		"moduleResolution": "node",
		"allowJs": true,
		"checkJs": false
	},
	"include": ["./deploy", "./lib", "./lib/**/*.js", "./test"],
	"exclude": ["./node_modules"],
	"files": ["./hardhat.config.ts"]
}
