{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"baseUrl": "src",
		"esModuleInterop": true,
		"lib": ["es2015", "dom"],
		"declaration": false,
		"skipLibCheck": true,
		"strictNullChecks": false,
		"outDir": "dist",
		"sourceMap": false,
		"resolveJsonModule": true,
		"strict": false,
		"moduleResolution": "node",
		"allowJs": true,
		"checkJs": false,
		"types": []
	},
	"include": ["./node_modules/libp2p", "./deploy", "./lib", "./lib/**/*.js", "./test"],
	"exclude": ["node_modules"],
	"typeAcquisition": { "enable": true },
	"files": ["./hardhat.config.ts"]
}
